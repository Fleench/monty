:root {
  --bg: #f4efe9;
  --card-bg: #ffffff;
  --accent: #9a6b4f;
  --text: #2b2521;
  --muted: #5f5149;
  --shadow: rgba(43, 37, 33, 0.08);
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: "Source Sans 3", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  background: var(--bg);
  color: var(--text);
  line-height: 1.6;
}

h1,
 h2 {
  font-family: "Playfair Display", Georgia, serif;
  color: var(--text);
}

h1 {
  margin-bottom: 0.5rem;
  font-size: clamp(2.2rem, 4vw, 3.2rem);
}

h2 {
  margin-top: 0;
  font-size: 1.35rem;
}

.container {
  width: min(1050px, 90vw);
  margin: 0 auto;
}

.page-header {
  background: linear-gradient(135deg, #fbeee0 0%, #efe3d4 100%);
  padding: 3.5rem 0 2.5rem;
  border-bottom: 1px solid rgba(154, 107, 79, 0.2);
  text-align: center;
}

.intro {
  margin: 0 auto 2rem;
  max-width: 680px;
  color: var(--muted);
  font-size: 1.05rem;
}

.filters {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 0.75rem;
}

.filter-button {
  padding: 0.55rem 1.2rem;
  border: 1px solid var(--accent);
  background: transparent;
  color: var(--accent);
  border-radius: 999px;
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.filter-button:hover,
.filter-button:focus-visible {
  background: var(--accent);
  color: white;
  outline: none;
  box-shadow: 0 6px 16px rgba(154, 107, 79, 0.28);
}

.filter-button.active {
  background: var(--accent);
  color: #fff;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1.5rem;
  padding: 3rem 0;
}

.card {
  background: var(--card-bg);
  border-radius: 18px;
  padding: 1.75rem;
  box-shadow: 0 12px 32px var(--shadow);
  border: 1px solid rgba(154, 107, 79, 0.15);
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 16px 36px rgba(43, 37, 33, 0.12);
}

.card ul {
  padding-left: 1.1rem;
  margin: 0;
  color: var(--muted);
}

.card p {
  margin: 0;
}

blockquote {
  margin: 0;
  padding-left: 1rem;
  border-left: 4px solid var(--accent);
  color: var(--accent);
  font-style: italic;
}

.page-footer {
  background: #201a17;
  color: #f2ece6;
  padding: 2rem 0;
  text-align: center;
  font-size: 0.95rem;
}

@media (prefers-reduced-motion: reduce) {
  * {
    transition-duration: 0.01ms !important;
    animation-duration: 0.01ms !important;
  }
}
